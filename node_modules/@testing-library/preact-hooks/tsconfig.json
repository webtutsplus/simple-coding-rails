{
  "compilerOptions": {                  
    "target": "es5",                     
    "module": "commonjs",                
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],                               
    "jsx": "react",
    "jsxFactory": "h",               
    "declaration": true,              
    "outDir": "./lib",                
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
  ]
}
